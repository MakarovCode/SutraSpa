<div class="row">
  <div class="col s12">
    <ul class="collection with-header">
      <li class="collection-header">
        <h4>¡Bienvenid@! <br><%= @user.first_name %></h4>
      </li>
      <li class="collection-item">
        Esta es tu mesa y compañeros
      </li>
      <li class="collection-header">
        <h4>Mesa: <%= @user.table %></h4>
      </li>
      <% @users.each do |user| %>
        <li class="collection-item <%= user.id == @user.id ? 'active' : '' %>">
          <%= user.full_name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
