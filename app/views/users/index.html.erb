<div class="row">
  <div class="col s12">
    <h1>Bienvenidos</h1>
    <p>
      Bienvenidos escribe tu documento para que encuentres tu mesa rápido
    </p>
    <%= form_tag('/users', method: :get) do %>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input id="icon_prefix" type="text" name="document" class="validate">
        <label for="icon_prefix">Cédula</label>
      </div>
      <div>
        <button type="submit" class="waves-effect waves-light btn-large">Entrar</button>
      </div>
    </div>
    <% end %>
  </div>
</div>
